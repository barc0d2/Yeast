    <!-- 전체 Position 목록 -->
    <select id="getAllPositions" resultMap="positionResult">
        SELECT *
        FROM POSITION
        ORDER BY POSITION_NO
    </select>

    <!-- 전체 Business 목록 -->
    <select id="getAllBusinesses" resultMap="businessResult">
        SELECT *
        FROM BUSINESS
        WHERE STATUS = 1
        ORDER BY BUSINESS_NO
    </select>

    <!-- 이름으로 매니저 찾기 -->
    <select id="findManagerByName" resultMap="memberResult">
        SELECT USER_NO, USER_NAME
        FROM MEMBER
        WHERE USER_NAME = #{managerName}
        AND STATUS = 1
    </select>

    <!-- 회원 등록 -->
    <insert id="insertMember">
        INSERT INTO MEMBER (
        BUSINESS_NO,
        POSITION_NO,
        MANAGER_NO,
        USER_NAME,
        USER_ID,
        USER_PWD,
        EMAIL,
        SALARY,
        BONUS,
        PHONE,
        GENDER,
        ADDRESS,
        IMAGE_CHANGE,
        IMAGE_ORIGIN,
        BIRTHDAY
        ) VALUES (
        #{businessNo},
        #{positionNo},
        #{managerNo},
        #{userName},
        #{userId},
        #{userPwd},
        #{email},
        #{salary},
        #{bonus},
        #{phone},
        #{gender},
        #{address},
        #{imageChange},
        #{imageOrigin},
        #{birthday}
        )
    </insert>
    <update id="delete">
        UPDATE MEMBER
        SET STATUS = 0
        WHERE USER_NO = #{userNo}
    </update>

</mapper>
