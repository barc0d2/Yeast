<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kh.yeast.mappers.branch.MyPageBMapper">
    <resultMap id="memberResult" type="Member">
        <result column="USER_NO" property="userNo"/>
        <result column="BUSINESS_NAME" property="businessName"/>
        <result column="BUSINESS_NO" property="businessNo"/>
        <result column="POSITION_NAME" property="positionName"/>
        <result column="POSITION_NO" property="positionNo"/>
        <result column="MANAGER_NAME" property="managerName"/>
        <result column="MANAGER_NO" property="managerNo"/>
        <result column="USER_NAME" property="userName"/>
        <result column="USER_ID" property="userId"/>
        <result column="USER_PWD" property="userPwd"/>
        <result column="EMAIL" property="email"/>
        <result column="SALARY" property="salary"/>
        <result column="BONUS" property="bonus"/>
        <result column="PHONE" property="phone"/>
        <result column="GENDER" property="gender"/>
        <result column="ADDRESS" property="address"/>
        <result column="CREATE_DATE" property="createDate"/>
        <result column="IMAGE_CHANGE" property="imageChange"/>
        <result column="IMAGE_ORIGIN" property="imageOrigin"/>
        <result column="BIRTHDAY" property="birthday"/>
    </resultMap>

    <!-- Position ResultMap -->
    <resultMap id="positionResult" type="Position">
        <result column="POSITION_NO" property="positionNo"/>
        <result column="POSITION_NAME" property="positionName"/>
        <result column="CREATE_TIME" property="createTime"/>
        <result column="ROLE" property="role"/>
    </resultMap>

    <!-- Business ResultMap -->
    <resultMap id="businessResult" type="Business">
        <result column="BUSINESS_NO" property="businessNo"/>
        <result column="BUSINESS_NAME" property="businessName"/>
        <result column="PHONE" property="phone"/>
        <result column="LOCATION" property="location"/>
        <result column="MONEY" property="money"/>
        <result column="CREATE_TIME" property="createTime"/>
        <result column="STATUS" property="status"/>
        <result column="IMAGE_CHANGE" property="imageChange"/>
        <result column="IMAGE_ORIGIN" property="imageOrigin"/>
    </resultMap>

    <select id="selectMember" resultMap="memberResult">
        SELECT M.USER_NO,
        BUSINESS_NAME,
        M.BUSINESS_NO,
        POSITION_NAME,
        M.POSITION_NO,
        E.USER_NAME,
        E.USER_NO,
        M.USER_NAME,
        M.USER_ID,
        M.USER_PWD,
        M.EMAIL,
        M.SALARY,
        M.BONUS,
        M.PHONE,
        M.GENDER,
        M.ADDRESS,
        M.CREATE_DATE,
        M.IMAGE_CHANGE,
        M.IMAGE_ORIGIN,
        TO_CHAR(M.BIRTHDAY, 'YYYY-MM-DD') AS BIRTHDAY,
        M.STATUS
        FROM MEMBER M
        LEFT JOIN BUSINESS ON M.BUSINESS_NO = BUSINESS.BUSINESS_NO
        LEFT JOIN POSITION ON M.POSITION_NO = POSITION.POSITION_NO
        LEFT JOIN MEMBER E ON M.USER_NO = E.USER_NO
        WHERE M.STATUS=1
        AND M.USER_NO = #{userNo}
    </select>
    <update id="update">
        UPDATE MEMBER M
        SET M.BUSINESS_NO = #{businessNo},
        M.POSITION_NO = #{positionNo},
        M.MANAGER_NO = #{managerNo},
        M.USER_NAME = #{userName},
        M.EMAIL = #{email},
        M.PHONE = #{phone},
        M.ADDRESS = #{address},
        M.IMAGE_CHANGE = #{imageChange},
        M.IMAGE_ORIGIN = #{imageOrigin},
        M.BIRTHDAY = #{birthday}
        WHERE M.USER_NO = #{userNo}
    </update>

    <!-- 전체 Position 목록 -->
    <select id="getAllPositions" resultMap="positionResult">
        SELECT *
        FROM POSITION
        ORDER BY POSITION_NO
    </select>

    <!-- 전체 Business 목록 -->
    <select id="getAllBusinesses" resultMap="businessResult">
        SELECT *
        FROM BUSINESS
        WHERE STATUS = 1
        ORDER BY BUSINESS_NO
    </select>

</mapper>