<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kh.boot.mappers.MemberMapper">
    <resultMap id="memberResult" type="Member">
        <result column="USER_ID" property="userId"/>
        <result column="USER_PWD" property="userPwd"/>
        <result column="USER_NAME" property="userName"/>
        <result column="BUSINESS_NAME" property="b"/>
        <result column="POSITION_NAME" property="b"/>
        <result column="MANAGER_NAME" property="b"/>
        <result column="SALARY" property="b"/>
        <result column="BONUS" property="b"/>
        <result column="EMAIL" property="email"/>
        <result column="PHONE" property="phone"/>
        <result column="GENDER" property="gender"/>
        <result column="ADDRESS" property="address"/>
        <result column="BIRTHDAY" property="birthday"/>
        <result column="ENROLL_DATE" property="enrollDate"/>
        <result column="MODIFY_DATE" property="modifyDate"/>
        <result column="STATUS" property="status"/>
    </resultMap>
    <select id="loginMember" parameterType="Member" resultMap="memberResult">
        SELECT USER_NO,
                BUSINESS_NAME,
                POSITION_NAME,
                MANAGER_NAME,
                USER_NAME,
                USER_ID,
                USER_PWD,
                EMAIL,
                SALARY,
                BONUS,
                PHONE,
                GENDER,
                ADDRESS,
                CREATE_DATE,
                IMAGE_CHANGEPATH,
                IMAGE_ORIGINPATH,
                BIRTHDAY,
                STATUS
         FROM MEMBER
        WHERE USER_ID = #{userId}
          AND STATUS = 'Y'
    </select>
    <insert id="insertMember">
        INSERT
        INTO MEMBER(
            USER_ID,
            USER_PWD,
            USER_NAME,
            EMAIL,
            GENDER,
            AGE,
            PHONE,
            ADDRESS
        ) VALUES(
            #{userId},
            #{userPwd},
            #{userName},
            #{email},
            #{gender},
            #{age},
            #{phone},
            #{address}
        )
    </insert>
    <select id="idCheck" resultType="_int">
        SELECT COUNT(*)
        FROM MEMBER
        WHERE USER_ID = #{userId}
    </select>
</mapper>