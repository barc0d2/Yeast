<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kh.yeast.mappers.MemberMapper">
    <resultMap id="memberResult" type="Member">
        <result column="USER_ID" property="userId"/>
        <result column="USER_PWD" property="userPwd"/>
        <result column="USER_NAME" property="userName"/>
        <result column="BUSINESS_NO" property="businessNo"/>
        <result column="POSITION_NO" property="positionNo"/>
        <result column="MANAGER_NO" property="managerNo"/>
        <result column="EMAIL" property="email"/>
        <result column="PHONE" property="phone"/>
        <result column="GENDER" property="gender"/>
        <result column="ADDRESS" property="address"/>
        <result column="BIRTHDAY" property="birthday"/>
        <result column="ENROLL_DATE" property="enrollDate"/>
        <result column="MODIFY_DATE" property="modifyDate"/>
        <result column="STATUS" property="status"/>
        <result column="IMAGE_CHANGE_PATH" property="imageChangePath"/>
        <result column="IMAGE_ORIGIN_PATH" property="imageOriginPath"/>
    </resultMap>
    <insert id="insertMember" parameterType="com.kh.yeast.domain.vo.Member">
        INSERT INTO MEMBER (
            BUSINESS_NO,
            POSITION_NO,
            MANAGER_NO,
            USER_NAME,
            USER_ID,
            USER_PWD,
            EMAIL,
            PHONE,
            GENDER,
            ADDRESS,
            ENROLL_DATE,
            IMAGE_CHANGE_PATH,
            IMAGE_ORIGIN_PATH,
            BIRTHDAY
        ) VALUES (
            #{businessNo},
            #{positionNo},
            #{managerNo},
            #{userName},
            #{userId},
            #{userPwd},
            #{email},
            #{phone},
            #{gender},
            #{address},
            #{imageChangePath},
            #{imageOriginPath},
            #{birthday}
        )
    </insert>

    <select id="idCheck" resultType="Integer">
        SELECT COUNT(*)
        FROM MEMBER
        WHERE user_id = #{userId}
    </select>

</mapper>